{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "destructuring": true,
        "jsx": true,
        "modules": true,
        "templateStrings": true,
        "spread": true
    },
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "arrowFunctions": true,
            "blockBindings": true,
            "classes": true,
            "destructuring": true,
            "jsx": true,
            "modules": true,
            "templateStrings": true,
            "spread": true
        }
    },
    "rules": {
        "no-unused-vars": 1,
        "quotes": [2, "single"],
        // never did i understand why there should be a newline
        "eol-last": 0,
        "new-cap": 0,
        "strict": [ 2, "global" ],
        // in tests they are prevalent
        "no-unused-expressions": 0,
        // backbone works this way unfortunately
        "no-new": 1,
        // i actually like that
        "no-underscore-dangle": 0,
        // e.g. search endpoints offer `matched_rank`
        "camelcase": 0,
        // allow `!!something`
        "no-extra-boolean-cast": 0,
        // allow line breaks between function calls
        "no-spaced-func": 0,
        // react rules
        "jsx-quotes": [1, "prefer-single"],
        "react/display-name": 1,
        "react/jsx-boolean-value": 0,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-unknown-property": 1,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 1,
        "react/self-closing-comp": 1,
        "react/no-danger": 1,
        "react/no-deprecated": 2,
        "react/no-direct-mutation-state": 2,
        "react/no-is-mounted": 2,
        "react/no-render-return-value": 2,
        "react/prefer-es6-class": 2,
        "react/prefer-stateless-function": 2,
        "react/require-render-return": 2,
        "react/sort-prop-types": 1,
        // might enable later but it is more likely a taste of style
        "react/jsx-closing-bracket-location": 0,
        "react/jsx-filename-extension": 2,
        "react/jsx-handler-names": 2,
        "react/jsx-key": 2,
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-pascal-case": 1,
        "react/jsx-space-before-closing": 2
    },
    "plugins": [
        "react"
    ],
    "settings": {
    "react": {
      "pragma": "React",
      "version": "15.0"
    }
  }
}